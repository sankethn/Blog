<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">RESTful Blog</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blog.forEach(function(blog){ %>
				<div class="item">
					<img src="<%= blog.image %>">
				</div>
				<div class="content">
					<a class="header" href="/blog/<%= blog.title %>"><%= blog.title %></a>
					<div class="meta">
						<span><%= blog.created.toDateString() %></span>
					</div>
					<div class="description">
						<p><%- blog.body.substring(0, 200) %>...</p>
					</div>
					<div class="extra">
						<a class="ui inverted floated red button" href="/blog/<%= blog.title %>">Read More<i class="right chevron icon"></i></a>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>

<%- include("partials/header") %>